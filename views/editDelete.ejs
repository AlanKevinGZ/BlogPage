<%- include("partials/header.ejs") %>

<section class="options mt-5">
    <div class="container">
        <h2 class="text-center">Editar o Eliminar Posts</h2>
        <div class="cards_col">
            <% posts.forEach((post, index) => { %>
                <div class="card_prop">
                    <div class="img_card">
                        <img src="img/test.png" alt="">
                    </div>
                    <div class="info_card">
                        <h2><%= post.title %></h2>
                        <p><%= post.comments %></p>
                        <form action="/delete/<%= index %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a href="/edit/<%= index %>" class="btn btn-warning">Edit</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<%- include("partials/footers.ejs") %>
